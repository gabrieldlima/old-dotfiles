label-separator = |
label-separator-foreground = ${colors.foreground}

menu-0-0 = %{T3}%{T1} Shutdown
menu-0-0-exec = shutdown now
menu-0-1 = %{T3}ﰇ%{T1} Reboot
menu-0-1-exec = reboot

