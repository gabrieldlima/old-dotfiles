;------------------------------------------------------------------------------
[module/pulseaudio]
type = internal/pulseaudio
interval = 5
label-volume = %{T3}墳%{T1} %percentage%%
label-muted = %{T3}婢%{T1} Muted
click-right = pavucontrol


;------------------------------------------------------------------------------
[module/date]
type = internal/date
interval = 1
date = "%a %b %d "
time = %H:%M
label = %{T3}%{T1} %date% %{T3}%{T1} %time%


;------------------------------------------------------------------------------
[module/powermenu]
type = custom/menu
expand-right = false
format-spacing = 1

label-open = %{T3}%{T1} Power
