label-urgent-padding = 2
label-urgent-font = 2


;------------------------------------------------------------------------------
[module/window]
type = custom/script
interval = 0
exec = ~/.config/polybar/scripts/xwindow.sh
label =  %output%


;------------------------------------------------------------------------------
[module/netspeed]
type = internal/network
interface = wlo1
interval = 1.0
